<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <!-- header -->
    <LinearLayout 
    android:id="@+id/header" 
    android:orientation="horizontal" 
    android:layout_width="fill_parent"
    android:background="@drawable/toptitlebar3"
    android:layout_height="@dimen/config_row_size">
    
  	    <ImageView 
	        android:id="@+id/image_header" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:src="@drawable/logo" 
	        android:layout_marginLeft="@dimen/config_picto_ListScreen_notif_left_margin">
        </ImageView>
        
        <TextView 
	        android:text="@string/app_name" 
	        android:id="@+id/text_header" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:typeface="normal"
			android:gravity="center_vertical"
			android:layout_gravity="center_vertical"
			android:singleLine="true"
			android:textColor="@color/plainWhite"
			android:textSize="@dimen/config_text_ListScreen_title_size"
			android:scrollHorizontally="true" 
			android:layout_marginRight="@dimen/config_row_ListScreen_title_left_and_right_margin" 
			android:layout_marginLeft="@dimen/config_row_ListScreen_title_left_and_right_margin">
		</TextView>
    </LinearLayout>
    <!-- The divider -->
	<TextView android:layout_height="0dip" android:layout_width="wrap_content"
		android:layout_weight="1" android:id="@+id/ViewShowDescription"
		android:textSize="20sp" android:padding="20sp" android:scrollbars="vertical"
		android:text="Lorem ipsum dolor sit amet, consectetur adipisici elit, sed eiusmod tempor incidunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquid ex ea commodi consequat. Quis aute iure reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint obcaecat cupiditat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."></TextView>
	<LinearLayout android:orientation="horizontal" 
				  android:layout_height="wrap_content"
		          android:layout_width="fill_parent"
		          android:padding="20sp">
		<TextView android:layout_width="wrap_content" 
			android:layout_height="wrap_content" android:id="@+id/ViewShowStatus"
			android:textSize="20sp" android:text="Stopped"></TextView>
		<TextView android:layout_width="0dip" android:layout_weight="1"
			android:layout_height="wrap_content" android:id="@+id/ViewShowStatusCurrent"
			android:textSize="20sp" android:layout_gravity="right" android:text="00:00:00/00:00:00" android:gravity="right"></TextView>
	</LinearLayout>
	<ProgressBar android:id="@+id/progBar" android:layout_width="fill_parent" android:max="100" android:progress="30" style="@android:style/Widget.ProgressBar.Horizontal" android:layout_height="25dip"/>
</LinearLayout>
